<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="app_tv_normal">
        <item name="android:fontFamily">@font/notosans_medium</item>
    </style>

    <style name="app_tv_italic">
        <item name="android:fontFamily">@font/notosans_medinum_italic</item>
    </style>

    <style name="perform_brief_tv" parent="app_tv_normal">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/ripple_white</item>
        <item name="android:textSize">@dimen/text_super_large</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="perform_detail_tv" parent="app_tv_normal">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/ripple_white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">left</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="perform_detail_textView_hide" parent="app_tv_normal">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/ripple_grey</item>
        <item name="android:text">@string/performance_hint_hided</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">56sp</item>
    </style>

    <style name="list_item_tv_hint" parent="app_tv_normal">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="list_item_tv_content" parent="app_tv_normal">

        <item name="android:textColor">@color/colorBlackLight</item>
        <item name="android:textSize">@dimen/text_little_small</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="list_item_tv_tag" parent="app_tv_italic">
        <item name="android:textColor">@color/colorBlackLight</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>
