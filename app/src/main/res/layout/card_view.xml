<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:alpha="0.8"
        android:background="#ffffff">

        <TextView
            android:id="@+id/text_priority"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:text="0" />

        <TextView
            android:id="@+id/my_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text_priority"
            android:text=""
            android:textColor="#000000"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/my_text"
            android:layout_toLeftOf="@id/button_down"
            android:textStyle="bold"
            android:text="×" />

        <Button
            android:id="@+id/button_down"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/my_text"
            android:layout_toLeftOf="@id/button_up"
            android:textStyle="bold"
            android:text="↓" />

        <Button
            android:id="@+id/button_up"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/my_text"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:text="↑" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
