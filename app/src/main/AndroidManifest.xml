<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.white5703.akyuu">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".app.AkyuuApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/akyuu_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:label">
        <activity
            android:name=".ui.activity.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.PerformActivity"/>
        <activity
            android:name=".ui.activity.ItemListActivity"
            android:theme="@style/ListTheme"/>
        <activity
            android:name=".ui.activity.EditActivity"
            android:theme="@style/EditTheme"/>
    </application>

</manifest>